{% extends 'base.html.twig' %}
{% block title %}Information{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12  d-flex justify-content-center">
                <img
                        class="logo-oracle mt-5" src="{{ asset('build/images/logo-oracle.png') }}" alt="">
            </div>
            <div class="col-12  d-flex justify-content-center">
                <h1 class="mt-3">Oracle Boost Information</h1>
            </div>
            <div class="d-flex justify-content-around col-12 mt-4">
                <div class="card border-primary mb-3" style="min-width: 20rem;">
                    <div class="card-header">Boosts donjon</div>
                    <div class="card-body">
                        <p>Argent récolté : {{ sumDungeonBoost }}</p>
                        <p>Nombre de boost : {{ countDungeonBoost }}</p>
                    </div>
                </div>
                <div class="card border-primary mb-3" style="min-width: 20rem;">
                    <div class="card-header">Boosts Raid</div>
                    <div class="card-body">
                        <p>Argent Récolté : {{ sumRaidBoost }}</p>
                        <p>Nombre de boost : {{ countRaidBoost }}</p>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center col-12">
                <h1>Oracle Information</h1>
            </div>
            <div class="d-flex justify-content-around col-12 mt-5">
                <div class="card border-success mb-3" style="min-width: 12rem;">
                    <div class="card-header">Information Guilde</div>
                    <div class="card-body">
                        {% for guildInformation in guildInformations %}
                            <a href="{{ guildInformation.link }}" target="_blank"><p class="card-text">{{ guildInformation.name }}</p></a>
                        {% endfor %}
                    </div>
                </div>
                <div class="card border-danger mb-3" style="min-width: 12rem;">
                    <div class="card-header">Information Raid</div>
                    <div class="card-body">
                        {% for raidInformation in raidInformations %}
                            <a href="{{ raidInformation.link }}" target="_blank"><p class="card-text">{{ raidInformation.name }}</p></a>
                        {% endfor %}
                    </div>
                </div>
                <div class="card border-warning mb-3" style="min-width: 12rem;">
                    <div class="card-header">Information Membre</div>
                    <div class="card-body">
                        {% for memberInformation in memberInformations %}
                            <a href="{{ memberInformation.link }}" target="_blank"><p class="card-text">{{ memberInformation.name }}</p></a>
                        {% endfor %}
                    </div>
                </div>
                <div class="card border-info mb-3" style="min-width: 12rem;">
                    <div class="card-header">Liens divers</div>
                    <div class="card-body">
                        {% for variousLink in variousLinks %}
                            <a href="{{ variousLink.link }}" target="_blank"><p class="card-text">{{ variousLink.name }}</p></a>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
