{% extends 'base.html.twig' %}

{% block title %}{{ user.pseudo }} profil!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12 d-flex justify-content-center">
                <h1 class="mt-5">Profil de {{ user.pseudo }}</h1>
            </div>
            <div class="col-12 mt-5 d-flex justify-content-around">
                <div class="col-6">
                    <div class="card border-success mb-3">
                        <div class="card-header d-flex justify-content-center">Compte</div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <p>Pseudo : {{ user.pseudo }}</p>
                                <a href="{{ path('profile_edit') }}"><img class="edit-icon-profile"
                                                                          src="{{ asset('build/images/edit.png') }}"
                                                                          alt="logo-add"></a>
                            </div>
                            <p>Email : {{ user.email }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="card border-success mb-3">
                        <div class="card-header d-flex justify-content-center">Info Po</div>
                        <div class="card-body">
                            <p>PO gagn√©e : {{ sumUser }}</p>
                            <p>Nombre de boost : {{ countUser }} </p>
                        </div>
                    </div>
                </div>
            </div>
            {% if is_granted('ROLE_MEMBRE') or is_granted('ROLE_ADMIN') %}
            <div class="d-flex justify-content-center col-12">
                <h2>Mes personnages</h2>
            </div>
            <div class="d-flex justify-content-end col-12">
                <a href="{{ path('character_new') }}"><img class="add-icon"
                                                           src="{{ asset('build/images/add.png') }}"
                                                           alt="logo-add"></a>
            </div>
            <div class="col-12 mb-3 mt-5 d-flex justify-content-around flex-wrap">
                {% include 'Components/character/card.html.twig' %}
            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
