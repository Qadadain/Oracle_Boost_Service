{% for character in characters %}
    <div class="col-3">
        <div class="card text-white bg-dark mb-3 character-card">
            <div class="card-header d-flex justify-content-center">{{ character.pseudo }}</div>
            <div class="card-body">
                <div class="d-flex justify-content-center">
                    <img class="classe-icon" src="{{ character.classe.linkImage }}" alt="">
                </div>
                <div class="d-flex justify-content-center">
                    <h5 class="card-title" style="color: {{ character.classe.color }}">{{ character.classe }}</h5>
                </div>
                <div class="d-flex justify-content-center">
                <h4>{{ character.iLvl }}</h4>
                </div>
                <div>
                    <p class="card-text character-text">{{ character.comment }}</p>
                </div>
                <div class="d-flex justify-content-around mt-2">
                    <a target="_blank" href="https://raider.io/characters/eu/archimonde/{{ character.pseudo }}"><img
                                class="raider-icon" src="{{ asset('build/images/raiderio.png') }}" alt=""></a>
                    {% if app.user is same as(character.user) and app.request.attributes.get('_route') is same as('profile_index') %}
                        <a href="{{ path('character_edit', {'id': character.id}) }}"><img class="edit-icon"
                                                                                          src="{{ asset('build/images/edit.png') }}"
                                                                                          alt="logo-add"></a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endfor %}